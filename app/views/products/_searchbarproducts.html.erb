<%= simple_form_for :search, url: products_path, method: :get do |f| %>
    <div class="d-flex m-3 form-group">
      <input autofocus class="form-control string required" type="text" name="query" id="search_query" placeholder="Rechercher" />
      <%= f.button :submit, 'Rechercher', class: "btn-secondary" %>
    </div>

    <div class="form-group">
      <%= f.label :search_by, "Rechercher par :" %>
      <div class="form-check">
        <%= f.radio_button :search_by, "name" %>
        <%= f.label :search_by_name, "Nom" %>
      </div>
      <div class="form-check">
        <%= f.radio_button :search_by, "comment" %>
        <%= f.label :search_by_comment, "Commentaire" %>
      </div>
      <div class="form-check">
        <%= f.radio_button :search_by, "price" %>
        <%= f.label :search_by_price, "Prix" %>
      </div>
      <div class="form-check">
        <%= f.radio_button :search_by, "user" %>
        <%= f.label :search_by_user, "Utilisateur" %>
      </div>
    </div>
  <% end %>
